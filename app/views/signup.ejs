<!doctype html>
<html>
<% include common/head %>
<body>
<div class="header">
  <div class= "home-menu pure-menu-open pure-menu-horizontal pure-menu-fixed">
    <a class="pure-menu-heading" href="..">Choons API </a>
    <div class="pure-menu pure-menu-horizontal">
      <ul class="pure-menu-list">
        <li class = "pure-menu-item"><a href='/'>Home</a></li>
        <li class = "pure-menu-item"><a href ="/login"> Login</a></li>
        <li class = "pure-menu-item pure-menu-selected"><a href ="/signup"> Signup</a></li>
      </ul>
  </div>
</div>
<div class="container">
  <h1> Login</h1>
  <% if (message.length > 0) { %>
    <div class="alert"><%= message %></div>
    <% } %>
    <form action="/signup" method="post" class="pure-form" id="login-form">
      <fieldset>
        <input id="firstname" class="pure-input-1" type="firstname" placeholder="First Name"  name="firstName" required>
        <input id="lastname" class="pure-input-1" type="lastname" placeholder="Last Name"  name="lastName" required>
        <input id="username" class="pure-input-1" type="username" placeholder="Username"  name="username" required>
        <input id="email" class="pure-input-1" type="email" name="email" placeholder="Email Address" name="email" required>
        <input id="password" class="pure-input-1" type="password" placeholder="Password" name="password" required>
        <button type="submit" class="pure-button pure-button-primary">Submit</button>
        <p>Don't have an account?
          <a href="/signup">Signup</a> or go back to
          <a href="/">home</a>.</p>
      </fieldset>
    </form>
  </div>
<% include common/footer %>
</body>
</html>
